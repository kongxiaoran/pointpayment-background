<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.impl.HotelDaoImpl">

    <sql id="hotel">hotel</sql>

    <insert id="insert" parameterType="Hotel" keyProperty="id"  useGeneratedKeys="true">
        INSERT INTO <include refid="hotel"/> (name,address,createtime,status) values(#{name},#{address},#{createtime},#{status})
    </insert>

    <select id="getBy" parameterType="java.util.HashMap" resultType="Hotel">
        SELECT id,name,address,phone,DATE_FORMAT(createtime,"%Y-%m-%d %H:%m") as createtime FROM <include refid="hotel"/> s WHERE s.status != 9
        <if test="id != null|| id=''">and s.id = #{id}</if>
    </select>

    <update id="update" parameterType="Hotel">
        UPDATE <include refid="hotel"/> s SET status = 1
        <if test="name != null|| name=''">, s.name = #{name}</if>
        <if test="address != null|| address=''">, s.address = #{address}</if>
        WHERE status != 9
        <if test="id !=null|| id=''">and s.id = #{id}</if>
    </update>
</mapper>